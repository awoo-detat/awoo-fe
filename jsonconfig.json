{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@assets/*": ["assets/*"],
      "@components/*": ["src/components/*"],
      "@constants/*": ["src/constants/*"],
      "@store/*": ["src/store/*"],
      "@utils/*": ["src/utils/*"],
      "@hooks/*": ["src/hooks/*"],
      "@mocks/*": ["src/__mocks__"],
      "@routes/*": ["src/routes/*"],
      "@scss/*": ["src/scss/*"],
      "slices/*": ["src/store/slices/*"]
    }
  },
  "exclude": ["**/__mocks__/*"]
}